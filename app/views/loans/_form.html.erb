<div class="card">
    <div class="card-header" style="background-color: none">
     <h4>Tambah Peminjaman</h4>
    </div>
    <div class="card-body mt-0">
      <div class="row" style="margin-bottom: 0px;">
        <div class="col-sm-12">
          <%= form_with(model: loan, local: true) do |form| %>
            <% if loan.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(loan.errors.count, "error") %> prohibited this loan from being saved:</h2>

                <ul>
                <% loan.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.label :user_id %>
                 <input type="text" class="form-control" value="<%= current_user.username %>" readonly>
                 <input type="hidden" name="loan[user_id]" class="form-control" value="<%= current_user.id %>" readonly>
                </div>
                <div class="form-group">
                  <%= form.label :software_id %>
                  <select name="loan[software_id]" id="software_id" class="form-control">
                    <option value="" selected>--Pilih--</option>
                    <% @softwares.each do |software| %>
                      <option value="<%= software.id %>"><%= software.nama %></option>
                    <% end %>
                  </select>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.label :tool_id %>
                  <select name="loan[tool_id]" id="tool_id" class="form-control">
                    <option value="">--Pilih--</option>
                    <% @tools.each do |tool| %>
                      <% if @loan.id.nil? %>
                        <option value="<%= tool.id %>"><%= tool.nama %></option>
                      <% else %>
                        <% if @loan.tool_id == tool.id %>
                          <option value="<%= tool.id %>" selected><%= tool.nama %></option>
                        <% else %>
                          <option value="<%= tool.id %>"><%= tool.nama %></option>
                        <% end %>
                      <% end %>
                    <% end %>
                  </select>
                </div>
                <div class="form-group">
                  <%= form.label :jumlah %>
                  <input type="number" class="form-control" name="loan[jumlah]">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.label :from_date %>
                    <input type="date" class="form-control" name="loan[from_date]">
                </div>
                <div class="form-group">
                  <%= form.label :deskripsi %>
                  <textarea class="form-control" name="loan[deskripsi]"></textarea>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.label :to_date %>
                  <input type="date" class="form-control" name="loan[to_date]">
                </div>
                <div class="form-group">
                  <%= form.label :penanggung_jawab %>
                  <input type="text" class="form-control" name="loan[penanggung_jawab]">
                </div>
              </div>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

